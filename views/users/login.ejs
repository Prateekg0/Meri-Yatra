<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">Login</h1>
        <hr>
        <div class="col-6 offset-3">
            <form action="/login" method="POST" novalidate class="needs-validation">
                <div class="mb-2">
                    <label for="username" class="form-label">Username</label>
                    <input required name="username" id="username" class="form-control"  type="text">
                </div>
                
                <div class="mb-2">
                    <label for="password" class="form-label">Password</label>
                    <input required name="password" id="password" class="form-control"  type="password">
                </div>
                <button class="btn btn-success ">Login</button>
            </form>
        </div>
    </div>
</body>