<% layout("/layouts/boilerplate") -%>
<body>
    <div class="row mt-3">
        <h1 class="col-6 offset-3">SignUp on Meri Yatra</h1>
        <hr>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" novalidate class="needs-validation">
                <div class="mb-2">
                    <label for="username" class="form-label">Username</label>
                    <input required name="username" id="username" class="form-control"  type="text">
                </div>
                <div class="mb-2">
                    <label for="email" class="form-label">Email</label>
                    <input required name="email" id="email" class="form-control"  type="email">
                </div>
                <div class="mb-2">
                    <label for="password" class="form-label">Password</label>
                    <input required name="password" id="password" class="form-control"  type="password">
                </div>
                <button class="btn btn-success ">SignUp</button>
            </form>
        </div>
    </div>
</body>